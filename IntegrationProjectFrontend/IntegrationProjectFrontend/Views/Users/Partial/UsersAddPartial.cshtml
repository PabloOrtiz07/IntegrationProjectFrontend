@model IntegrationProjectFrontend.ViewModels.UsersViewModel

<div class="modal fade" id="userModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
   

            @if (Model.Id == 0)
            {
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle">User registration.</h5>
                </div>
                @using (Html.BeginForm("RegisterUser", "Users", FormMethod.Post))
                {
                    <div class="modal-body">

                        <div class="row">
                            <div class="col-md-6 mt-1 mb-3">
                                <label class="col-md-4 form-control-label">FirstName</label>
                                @Html.EditorFor(x=> x.FirstName, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                            </div>

                            <div class="col-md-6 mt-1 mb-3">
                                <label class="col-md-2 form-control-label">LastName</label>
                                @Html.EditorFor(x=> x.LastName, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                            </div>
                            <div class="col-md-6 mt-1 mb-3">
                                <label class="col-md-2 form-control-label">DNI</label>
                                @Html.EditorFor(x=> x.Dni, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mt-1 mb-3">
                                <label class="col-md-2 form-control-label">Email</label>
                                @Html.EditorFor(x=> x.Email, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                            </div>

                            <div class="col-md-6 mt-1 mb-3">
                                <label class="col-md-5 form-control-label">Password</label>
                                @Html.EditorFor(x=> x.Password, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-6 mt-1 mb-3">
                                <label class="col-md-5 form-control-label">Role</label>
                                @Html.EditorFor(x=> x.RoleId, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success" id="btnGuardar">Save</button>
                    </div>
                }
            }
            @if (Model.Id != 0)
            {
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle">User modification.</h5>
                </div>
                @using (Html.BeginForm("EditUser", "Users", FormMethod.Post))
                {
                    @Html.HiddenFor(x => x.Id)

                    <div class="modal-body">

                        <div class="row">
                            <div class="col-md-6 mt-1 mb-3">
                                <label class="col-md-4 form-control-label">FirstName</label>
                                @Html.EditorFor(x=> x.FirstName, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                            </div>

                            <div class="col-md-6 mt-1 mb-3">
                                <label class="col-md-2 form-control-label">LastName</label>
                                @Html.EditorFor(x=> x.LastName, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                            </div>
                            <div class="col-md-6 mt-1 mb-3">
                                <label class="col-md-2 form-control-label">DNI</label>
                                @Html.EditorFor(x=> x.Dni, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mt-1 mb-3">
                                <label class="col-md-2 form-control-label">Email</label>
                                @Html.EditorFor(x=> x.Email, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                            </div>

                            <div class="col-md-6 mt-1 mb-3">
                                <label class="col-md-5 form-control-label">Password</label>
                                @Html.EditorFor(x=> x.Password, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-6 mt-1 mb-3">
                                <label class="col-md-5 form-control-label">Role</label>
                                @Html.EditorFor(x=> x.RoleId, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success" id="btnGuardar">Save</button>
                    </div>
                }
            }
        </div>
    </div>
</div>